                        <input type="file" name="postedFile" />
                    </td>
                    <td><input type="submit" value="Upload" /></td>
                </tr>

                <tr>
                    <td></td>
                    <td><input class="btn btn-success" type="submit" value="Add" /></td>

                </tr>



            </table>

        </form>

        <div class="col-lg-10">

            <table class="table table-striped row">
                <thead>
                    <tr>
                        <th>Sl</th>
                        <th>Category Name</th>
                        <th>Category Code</th>
                        <th>Address</th>
                        <th>Email</th>
                        <th>Contact</th>
                        <th>Loyalty</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>

                    @{int sl = 1; }
                    @foreach (var i in Model.customers)
                    {
                        <tr>
                            <td>@( sl++ )</td>
                            <td>@i.Name</td>
                            <td>@i.Code</td>
                            <td>@i.Address</td>
                            <td>@i.Email</td>
                            <td>@i.Contact</td>
                            <td>@i.Loyalty</td>
                            <td><a href="/Customer/Edit?id=@i.ID" class="btn btn-primary" name="Name">Edit</a></td>
                            <td><a href="/Customer/Delete?id=@i.ID" class="btn btn-danger">Delete</a></td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>

    </div>
