        <form method="post">
            <table>

                <tr>
                    <td><h4 class="text-primary">Category Name</h4></td>
                    <td><input type="text" name="Name" /></td>

                </tr>

                <tr>
                    <td><h4 class="text-primary">Category Code</h4></td>
                    <td><input class="text-primary" type="text" name="Code" /></td>

                </tr>

                <tr>
                    <td><h4 class="text-primary">Customer Address</h4></td>
                    <td><input class="text-primary" type="text" name="Address" /></td>

                </tr>

                <tr>
                    <td><h4 class="text-primary">Customer Email</h4></td>
                    <td><input class="text-primary" type="text" name="Email" /></td>

                </tr>

                <tr>
                    <td><h4 class="text-primary">Customer Contact</h4></td>
                    <td><input class="text-primary" type="text" name="Contact" /></td>

                </tr>

                <tr>
