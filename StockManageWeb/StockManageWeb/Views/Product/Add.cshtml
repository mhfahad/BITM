@model StockManage.Models.Models.Product
@{
    ViewBag.Title = "Add";
}


<h2 class="alert alert-info text-center">Add</h2>
@if (ViewBag.message != null)
{
    <div class="alert alert-info">@ViewBag.message</div>

}
    <div class="row" style="margin-left:20%">

        <form method="post">
            <table>

                <tr>
                    <td><h4 class="text-primary">Product Name</h4></td>
                    <td><input type="text" name="Name" /></td>

                </tr>

                <tr>
                    <td><h4 class="text-primary">Product Code</h4></td>
                    <td><input class="text-primary" type="text" name="Code" /></td>

                </tr>

                <tr>
                    <td><h4 class="text-primary">Product Reorder Level</h4></td>
                    <td><input class="text-primary" type="text" name="ReorderLevel" /></td>

                </tr>

                <tr>

                    <td><h4 class="text-primary">Product Category</h4></td>

                    <td>
                        <select class="dropdown" name="Category">

                            @foreach (var item in Model.categories)
                            {

                                <option value="@item.Name">@item.Name</option>

                            }

                        </select>

                    </td>

                    <td><a href="/Category/add" class="btn btn-danger">+</a></td></td>
                </tr>

                <tr>
                    <td><h4 class="text-primary">Product Discription</h4></td>
                    <td><input class="text-primary" type="text" name="Discription" /></td>

                </tr>


                <tr>
                    <td></td>
                    <td><input class="btn btn-success" type="submit" value="Add" /></td>

                </tr>

            </table>

        </form>

        <div><h1></h1></div>
        <div><h1></h1></div>
       

        <div class="col-lg-10">

            <table class="table table-striped row">
                <thead>
                    <tr>
                        <th>Sl</th>
                        <th>Product Name</th>
                        <th>Product Code</th>
                        <th>Product Category</th>
                        <th>Product Reoreder Level</th>
                        <th>Product Discriptions</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>

                    @{int sl = 1; }
                    @foreach (var i in Model.products)
                    {
                        <tr>
                            <td>@(sl++ )</td>
                            <td>@i.Name</td>
                            <td>@i.Code</td>
                            <td>@i.Category</td>
                            <td>@i.ReorderLevel</td>
                            <td>@i.Discription</td>
                            <td><a href="/Product/Edit?id=@i.ID" class="btn btn-primary" name="Name">Edit</a></td>
                            <td><a href="/Product/Delete?id=@i.ID" class="btn btn-danger">Delete</a></td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>

    </div>
